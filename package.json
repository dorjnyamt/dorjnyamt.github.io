{
  "name": "dreamatorium",
  "version": "0.0.1",
  "description": "Dreamatorium theme for Hugo",
  "main": "index.js",
  "scripts": {
    "dev:css": "NODE_ENV=development tailwindcss -i ./themes/dreamatorium/assets/css/input.css -o ./static/css/main.css -w",
    "build:css": "NODE_ENV=production tailwindcss -i ./themes/dreamatorium/assets/css/input.css -o ./static/css/main.css -w --minify",
    "dev": "hugo server --noHTTPCache",
    "build": "npm run build:css && hugo --gc --minify"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dorjnyamt/dreamatorium.git"
  },
  "author": "Dorjnyam Tumur-Ochir",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dorjnyamt/dreamatorium/issues"
  },
  "homepage": "https://github.com/dorjnyamt/dreamatorium#readme",
  "dependencies": {
    "@tailwindcss/line-clamp": "^0.4.4",
    "@tailwindcss/typography": "^0.5.10",
    "tailwindcss": "^3.3.3"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.31",
    "postcss-apply": "^0.12.0",
    "postcss-cli": "^10.1.0",
    "postcss-import": "^15.1.0"
  }
}
